<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Finanças</h1>
    <div class="col-sm-1">
        <div class="mb-3">
            <label class="form-label" for="income">Salário:</label>
            <input id="income" name="income" type="number" class="form-control" value=<%=finance.income %>
            aria-label="Salario">
        </div>
    </div>
    <div class="col-sm-1">
        <div class="mb-3">
            <label class="form-label" for="fixed-bill1">Length:</label>
            <input id="fixed-bill1" name="fixed-bill1" type="number" class="form-control" value=<%=finance.fixedBills.length %>
            aria-label="Bill">
        </div>
    </div>
</div>